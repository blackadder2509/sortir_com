{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}
    <div style="margin: 20px;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h1>Liste des sorties</h1>
            <a href="{{ path('app_sortie_new') }}" class="btn btn-primary">
                + Cr√©er une sortie
            </a>
        </div>

        {# Barre de recherche #}
        <div style="background: #f0f0f0; padding: 20px; margin: 20px 0; border-radius: 8px;">
            {{ form_start(form) }}
            <div class="d-flex gap-2">
                {{ form_row(form.q, {'label': false, 'attr': {'placeholder': 'Rechercher...'}}) }}
                {{ form_row(form.campus, {'label': false}) }}
                <button type="submit" class="btn btn-dark">Rechercher</button>
            </div>
            {{ form_end(form) }}
        </div>

        {# Le Tableau Complet #}
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Cl√¥ture</th>
                <th>Inscrits</th>
                <th>√âtat</th>
                <th>Campus</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                    <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '-' }}</td>
                    <td>
                        0
                        0 / {{ sortie.nbInscriptionsMax|default('-') }}
                    </td>
                    <td>
                        {% if sortie.etat %}
                            <span class="badge bg-info text-dark">{{ sortie.etat.libelle }}</span>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>{{ sortie.campus ? sortie.campus.nom : 'N/A' }}</td>
                    <td>
                        <div class="d-flex gap-1 flex-column">
                            <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>

                            {% if sortie.etat and sortie.etat.libelle == 'En cr√©ation' %}
                                <a href="#" class="btn btn-sm btn-success">üöÄ Publier</a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="7" class="text-center">Aucune sortie trouv√©e.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
