{# templates/user/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Profil de {{ user.username }}</h1>

        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th style="width: 30%">Pseudo</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.telephone ?: 'Non renseigné' }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Campus</th>
                        <td>{{ user.campus ? user.campus.nom : 'Aucun' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2 align-items-center">
            <a href="{{ path('app_sortie_index') }}" class="btn btn-secondary">Retour aux sorties</a>

            {# Si l'utilisateur connecté regarde son propre profil, il peut le modifier #}
            {% if app.user and app.user.id == user.id %}
                <a href="{{ path('app_user_profile_edit') }}" class="btn btn-primary">Modifier mon profil</a>
            {% endif %}

            {# Le formulaire de suppression est réservé à l'admin (selon ton IsGranted dans le contrôleur)
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_user_index') }}" class="btn btn-outline-dark">Liste des utilisateurs (Admin)</a>
                {{ include('user/_delete_form.html.twig') }}
            {% endif %} #}
        </div>
    </div>
{% endblock %}
